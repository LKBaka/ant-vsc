{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Fox Script",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numeric-literals"
		},
		{
			"include": "#boolean-literals"
		},
		{
			"include": "#variables"
		},
		{
            "include": "#function-names"
        }
	],
	"repository": {
		"function-names": {
            "name": "entity.name.function.AntScript",
			"match": "\\b([a-zA-Z_\\u4e00-\\u9fa5][a-zA-Z0-9_\\u4e00-\\u9fa5]*)\\s*(?=\\()",
			"captures": {
				"1": {
					"name": "entity.name.function.AntScript"
				}
			},
            "settings": {
                "foreground": "#DCDC90"
            }
        },
		"variables": {
			"patterns": [{
				"name": "variable.other.AntScript",
				"match": "\\b([a-zA-Z_\\u4e00-\\u9fa5][a-zA-Z0-9_\\u4e00-\\u9fa5]*)\\b(?![^\\s]*\\()",
				"settings": {
					"foreground": "#98C379"
				}
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.AntScript",
				"match": "(?i)\\b(if|else|while|for|in|return|class|func|let)\\b",
				"settings": {
					"foreground": "#CF8049"
				}
			}]
		},
		"strings": {
			"name": "string.quoted.double.AntScript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.AntScript",
					"match": "\\\\."
				}
			]
		},
		"numeric-literals": {
			"name": "constant.numeric",
			"match": "\\b(?:0[xX][0-9a-fA-F]+|0[oO][0-7]+|0[bB][01]+|[0-9]+(?:\\.[0-9]+)?)(?:[eE][+-]?[0-9]+)?\\b"
		},
		"boolean-literals": {
			"name": "constant.language.boolean",
			"match": "(?i)\\b(?:true|false)\\b"
		}
	},
	"scopeName": "source.ant"
}